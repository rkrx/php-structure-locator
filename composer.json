{
	"name": "rkr/php-structure-locator",
	"description": "A PHP library to locate classes, functions, and other stuff in PHP files using xml and xpath.",
	"license": "MIT",
	"type": "library",
	"keywords": ["php", "structure", "parser", "xml", "xpath", "locator", "finder"],
	"homepage": "https://github.com/rkrx/php-structure-locator",
	"authors": [{"name": "Ron Kirschler", "email": "ron.kirschler@gmail.com"}],
    "require": {
		"php": ">= 8.1",

		"ext-dom": "*",

        "symfony/finder": ">= 6.0",
        "nikic/php-parser": ">= 5.5",
		"psr/log": ">= 1.0"
	},
    "autoload": {
        "psr-4": {
            "PhpLocate\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpLocate\\": "tests/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.2"
	},
	"scripts": {
		"phpstan": "phpstan analyse -c phpstan.neon"
	}
}
